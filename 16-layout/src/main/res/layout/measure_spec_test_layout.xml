<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hencoder.a16_layout.guo.MeasureSpecView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#757C4DFF"
        android:text="MeasureSpec: wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="#61EEFF41"
        android:layout_height="200dp">

        <com.hencoder.a16_layout.guo.MeasureSpecView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MeasureSpec: match_parent"/>
    </FrameLayout>

    <com.hencoder.a16_layout.guo.MeasureSpecView
        android:layout_width="300dp"
        android:background="#74FF4081"
        android:layout_height="100dp"
        android:text="MeasureSpec: 固定大小"/>
</LinearLayout>